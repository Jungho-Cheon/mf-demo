{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue",
  "extends": [
    "./base.json",
    "@vue/tsconfig/tsconfig.json"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "types": ["vite/client"],
    "composite": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"]
} 